							</group>
							<group string="Valores Actuales" col="1">
								<group col="1">
									<field name="siisa_oferta" readonly="1"/>
								</group>
								<group col="1">
									<field name="siisa_cuota_max" readonly="1"/>
								</group>
								<group col="1">
									<field name="siisa_plazo" readonly="1"/>
								</group>
								<group col="1">
									<field name="siisa_motivo" readonly="1"/>
								</group>
							</group>								
						</group>
					</group>
				</xpath>
			</field>
